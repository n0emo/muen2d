{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["ES2020"],
    "paths": {
      "glint": ["./typings/glint.d.ts"],
      "glint:*": ["./typings/*.d.ts"]
    }
  },
  "include": ["./examples/**/*.js", "./typings/**/*.d.ts"],
  "exclude": ["node_modules", "build", "docs"]
}
